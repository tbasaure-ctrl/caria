# Caria Multi-User System - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=caria_user
POSTGRES_PASSWORD=Theolucas7  # CHANGE IN PRODUCTION!
POSTGRES_DB=caria

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# Generate a secure secret key: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# ============================================================================
# LLM CONFIGURATION (Choose one)
# ============================================================================
# Option A: Gemini (Google API)
GEMINI_API_KEY=your_gemini_api_key_here

# Option B: OpenAI (Fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Option C: Ollama (Local - no key needed)
# Just install Ollama and run: ollama pull llama3.2

# ============================================================================
# CARIA CONFIGURATION
# ============================================================================
CARIA_SETTINGS_PATH=caria_data/configs/base.yaml
CARIA_MODEL_CHECKPOINT=  # Optional: path to model checkpoint

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============================================================================
# CORS (for frontend)
# ============================================================================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================================================
# EMAIL (for password reset - Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@caria.com
